{
    "name": "bic-validator",
    "version": "1.0.0",
    "description": "BIC (Business Identifier Code) format validator",
    "main": "dist/bic.cjs.js",
    "module": "dist/bic.esm.js",
    "browser": "dist/bic.umd.js",
    "scripts": {
        "start": "rollup -c -w",
        "build": "rimraf dist/ && rollup -c",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "format": "prettier --write",
        "lint": "eslint \"src/**/*.ts\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nicolaspayot/bic.git"
    },
    "keywords": [
        "iso 9362",
        "bic",
        "bic code",
        "business identifier code",
        "swift",
        "swift-bic",
        "swift id",
        "swift code"
    ],
    "author": "Nicolas Payot <nicolas.payot@gmail.com> (https://github.com/nicolaspayot)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/nicolaspayot/bic/issues"
    },
    "homepage": "https://github.com/nicolaspayot/bic#readme",
    "devDependencies": {
        "@types/jest": "26.0.20",
        "@typescript-eslint/eslint-plugin": "4.27.0",
        "@typescript-eslint/parser": "4.27.0",
        "@wessberg/rollup-plugin-ts": "1.3.14",
        "commitizen": "4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.24.1",
        "husky": "4.3.8",
        "jest": "26.6.3",
        "lint-staged": "10.5.4",
        "prettier": "2.3.2",
        "rimraf": "3.0.2",
        "rollup": "2.56.3",
        "rollup-plugin-terser": "7.0.2",
        "semantic-release": "17.4.5",
        "ts-jest": "26.5.6",
        "typescript": "4.3.2"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": "yarn format"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}